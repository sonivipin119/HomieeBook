<%- include('../partials/head') %>
</head>
<style>
  .home-card {
      transition: transform 0.2s;
    }
    .home-card:hover {
      transform: translateY(-7px);
    }
    @layer utilities {
      .text-outline {
        color: rgba(0, 0, 0, 0.65);
        -webkit-text-stroke: 1.5px #bdb9b9;
      }
    }

</style>
<body class="bg-blue-100 font-sans flex flex-col">

  <main class="content mx-auto">
      <section class="flex flex-col justify-between items-center">
        <div class="relative w-full">
          <!-- Background Image -->
          <img src="/images/front-home.jpg" class="w-full h-full object-cover" style="filter: blur(1.5px); height: 620px;">
          <div class="absolute flex flex-col items-start justify-start w-full top-0">
            <%- include('../partials/nav') %>
            <div class="flex flex-row mt-2 py-1 rounded-md p-6 " style="margin-left: 15px;">
              <div class="text-xl text-white font-bold tracking-wide" style="margin-right: 10px;">
                Welcome!
              </div>
              <div class="text-xl text-black font-semibold">
                <%= user && user.FirstName ? user.FirstName.toUpperCase() : '' %>
              </div>
            </div>
            <div class=" text-outline font-bold drop-shadow-lg mt-3" style=" margin-left:35px; font-size: 50px; letter-spacing: 8px;">
              <span style="font-size: 70px;">D</span>iscover Your <br>Dream <b>Residence</b> .. <br>With Us
            </div>
            <div class=" py-10 px-5 md:text-left text-white p-5" style="margin-left: 15px;">
              <h2 class="text-3xl md:text-3xl font-bold mb-6">
                Unveil Your Perfect Home with Us –<br> Experience the HomieeBook of Luxury Living
              </h2>
              <p class=" leading-relaxed max-w-3xl mx-auto md:mx-0">
                Whether you’re searching for a modern villa, a cozy apartment, or a spacious family house, 
                we bring you the best properties tailored to your lifestyle. Let us help you find the perfect 
                match that feels like home.
              </p>
            </div>
          </div>
        </div>

        <!-- Section Title -->
      </section>
      <section class="p-8">
        <h2 class="text-3xl text-center text-sky-950 font-bold mb-6">
          Available Homes
        </h2>
      <ul class="grid grid-cols-0 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <% registerHome.forEach(home => { %>
        <li class=" home-card rounded-lg shadow-md overflow-hidden transition duration-300 hover:shadow-lg">
          <div class="relative h-48 overflow-hidden">
            <img src="<%= home.photo.url%>" alt="<%= home.Home %>" class="w-full h-full object-cover">
          </div>
          <div class="p-6">
            <div class="flex justify-between items-start">
              <h3 class="text-xl text-sky-800 font-semibold mb-2"><%=home.Home%></h3>
              <%- include('../partials/favourite',{home : home}) %>
              
            </div>
            <p class="text-gray-600 mb-4"><%= home.Location %></p>
            <div class="flex justify-between items-center">
              <div class="flex items-center space-x-2">
                <i class="fas fa-star cursor-pointer text-amber-600"></i>
                <span class="text-gray-600"><%= home.rating %><%= home.reviews %></span>
              </div>
              <span class="text-l font-bold text-sky-600">$<%= home.Price %>/Night</span>
            </div>
          </div>
          <a href="/homes/<%= home._id%>" class="block bg-sky-500 text-white text-center py-3 font-semibold hover:bg-sky-600 transition duration-300">
            View Details
          </a>
        </li>
        <% }) %>
      </ul>
    </section>
    </main>

    <%- include('../partials/footerTile') %>
    <script src = "../partials/bottonfav.js"></script>
    
  </body>
</html>