
<%- include('../partials/head') %>
</head>

<style>
  .home-card {
      transition: transform 0.2s;
    }
  .home-card:hover {
      transform: translateY(-7px);
    }
</style>
<body class="bg-blue-100 font-sans min-h-screen flex flex-col">
    <%- include('../partials/nav') %>

    <main class="content container mx-auto p-8 flex-1">
      <h2 class="text-3xl text-sky-950 font-bold text-center mb-8">
        Favourite List
      </h2>
      <ul class="grid grid-cols-0 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <% favHome.forEach(home => { %>
        <li class="home-card bg-white rounded-lg shadow-md overflow-hidden transition duration-300 hover:shadow-lg">
          <div class="relative h-48 overflow-hidden">
            <img src="<%= home.photo.url %>" alt="<%= home.Home %>" class="w-full h-full object-cover">
          </div>
          <div class="p-4">
            <div class="flex justify-between items-start">
              <h3 class="text-xl text-sky-800 font-semibold mb-2"><%= home.Home %></h3>
              <span class="bg-sky-100 text-sky-800 text-sm font-medium px-2.5 py-0.5 rounded-full"><%= home.type %></span>
            </div>
            <p class="text-gray-600 mb-4"><%= home.Location %></p>
            <div class="flex justify-between items-center">
              <div class="flex items-center space-x-2">
                <i class="fas fa-star cursor-pointer text-amber-600"></i>
                <span class="text-gray-600"><%= home.rating %> <%= home.reviews %></span>
              </div>
              <span class="text-l font-bold text-sky-600">$<%= home.Price %>/Night</span>
              <% if (home) { %>
              <form action="/favoruites/delete/<%=home._id%>" method="post">
                <button><i class="fas fa-trash text-red-500 text-xl hover:text-red-700"></i></button>
              </form>
              <% } %>
            </div>
            <form action="/homes/<%=home._id%>" class="mt-3.5">
              <button type="submit" class="w-full bg-sky-500 text-white py-2 px-4 rounded-md hover:bg-sky-600 transition duration-300">Book Now</button>
            </form>
          </div>
          
        </li>
        <% }) %>
      </ul>
    </main>
    <%- include('../partials/footerTile') %>
    <script></script>
  </body>
</html>